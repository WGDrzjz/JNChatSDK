<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.chat.fragment.JCUserDetailFragment">


  <include
      android:id="@+id/user_info_container"
      layout="@layout/title_user_info"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.zhy.autolayout.AutoLinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95px"
                    android:text="性别:"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="@dimen/list_auto_user_info_tv_text_size" />
                    <TextView
                        android:id="@+id/detail_tv_sex"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="50px"
                        android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View style="@style/gray_line" />
            <com.zhy.autolayout.AutoLinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95px"
                    android:text="年龄:"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="@dimen/list_auto_user_info_tv_text_size" />
                    <TextView
                        android:id="@+id/detail_tv_age"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="50px"
                        android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View style="@style/gray_line" />
            <com.zhy.autolayout.AutoLinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95px"
                    android:text="身份证号:"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="@dimen/list_auto_user_info_tv_text_size" />
                    <TextView
                        android:id="@+id/detail_tv_idCard"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="50px"
                        android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View style="@style/gray_line" />
            <com.zhy.autolayout.AutoLinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95px"
                    android:text="IM:"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="@dimen/list_auto_user_info_tv_text_size" />
                    <TextView
                        android:id="@+id/detail_tv_im"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="50px"
                        android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View style="@style/gray_line" />
            <com.zhy.autolayout.AutoLinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95px"
                    android:text="手机号:"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="@dimen/list_auto_user_info_tv_text_size" />
                    <TextView
                        android:id="@+id/detail_tv_phone"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="50px"
                        android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View style="@style/gray_line" />
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/detail_ll_permission"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95px"
                    android:text="群邀请权限:"
                    android:gravity="right"
                    android:textColor="@color/black"

                    android:textSize="@dimen/list_auto_user_info_tv_text_size" />
                    <Spinner
                        android:id="@+id/detail_tv_permission"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textSize="50px"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content"/>
            </com.zhy.autolayout.AutoLinearLayout>
            <View style="@style/gray_line" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:visibility="visible"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/detail_tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编辑信息"
                    android:padding="50dp"
                    android:textColor="@color/button_text_color_blue"
                    android:textSize="@dimen/list_auto_user_info_tv_text_size"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/detail_tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="50dp"
                    android:text="删除好友"
                    android:background="@color/gray_bg"
                    android:textColor="@color/red"
                    android:textSize="@dimen/list_auto_user_info_tv_text_size"
                    android:visibility="gone" />
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>



    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>