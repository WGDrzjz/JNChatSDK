<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_msg_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:text=""/>

    <ImageView
        android:id="@+id/iv_msg_pic"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_width="160dp"
        android:layout_height="160dp"/>

    <TextView
        android:id="@+id/tv_msg_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:textSize="18sp"
        android:text=""/>


    <LinearLayout
        android:id="@+id/ll_msg_card"
        android:background="@drawable/button_bg_blue_bound"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="240dp">
        <TextView
            android:id="@+id/tv_msg_card_name"

            android:textSize="28sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_msg_card_head"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="30dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_msg_file"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="300dp"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/iv_msg_file_type"
            android:layout_width="160dp"
            android:layout_height="200dp"/>
        <TextView
            android:id="@+id/tv_msg_file_name"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</FrameLayout>
