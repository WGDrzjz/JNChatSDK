<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/padding_6"
            app:cardElevation="@dimen/dimen_2"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            android:layout_marginStart="@dimen/padding_16"
            android:layout_marginEnd="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:padding="@dimen/padding_16"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dimen_16"
                android:paddingEnd="@dimen/padding_16"
                tools:ignore="MissingConstraints">
                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="1042@imapi.jndv.com"
                    />
                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜索"
                    android:textSize="@dimen/txt_size_18"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding_8"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/padding_6"
                app:cardElevation="@dimen/dimen_2"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginEnd="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_16"
                android:padding="@dimen/padding_16"
                >
                <LinearLayout
                    android:id="@+id/ll_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dimen_16"
                    tools:ignore="MissingConstraints">
                    <ImageView
                        android:id="@+id/iv_user_head"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="@dimen/padding_8"
                        android:layout_marginBottom="@dimen/padding_8"
                        />
                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名称"
                        android:textSize="@dimen/txt_size_18"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/padding_8"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/padding_6"
                app:cardElevation="@dimen/dimen_2"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginEnd="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_16"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:id="@+id/rl_msg_mdr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:padding="@dimen/padding_16">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="消息免打扰"
                            android:textSize="@dimen/txt_size_18"/>
                        <Switch
                            android:id="@+id/switch_mdr"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/padding_10"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>
                    <View
                        android:id="@+id/v_line_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:background="@color/divider_line_bg"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:layout_marginRight="@dimen/padding_16"
                        android:visibility="gone"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_msg_zd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:padding="@dimen/padding_16">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="置顶聊天"
                            android:textSize="@dimen/txt_size_18"/>
                        <Switch
                            android:id="@+id/switch_zd"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/padding_10"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>
                    <View
                        android:id="@+id/v_line_2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_1"
                        android:background="@color/divider_line_bg"
                        android:layout_marginLeft="@dimen/padding_16"
                        android:layout_marginRight="@dimen/padding_16"
                        android:visibility="gone"
                        />
                    <RelativeLayout
                        android:id="@+id/rl_qcord"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_16">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="二维码"
                            android:textSize="@dimen/txt_size_18"/>
                        <ImageView
                            android:layout_width="@dimen/padding_20"
                            android:layout_height="@dimen/padding_20"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/jc_jiantou_right"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_create_session"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/padding_6"
                app:cardElevation="@dimen/dimen_2"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginEnd="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_16"
                android:padding="@dimen/padding_16"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="创建聊天会话"
                    android:textSize="@dimen/txt_size_18"
                    android:padding="@dimen/padding_8"
                    android:textColor="@color/red"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_add_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/padding_6"
                app:cardElevation="@dimen/dimen_2"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginEnd="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_16"
                android:padding="@dimen/padding_16"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="添加好友"
                    android:textSize="@dimen/txt_size_18"
                    android:padding="@dimen/padding_8"
                    android:textColor="@color/red"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_delete_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/padding_6"
                app:cardElevation="@dimen/dimen_2"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                android:layout_marginStart="@dimen/padding_16"
                android:layout_marginEnd="@dimen/padding_16"
                android:layout_marginTop="@dimen/padding_16"
                android:padding="@dimen/padding_16"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="删除好友"
                    android:textSize="@dimen/txt_size_18"
                    android:padding="@dimen/padding_8"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>