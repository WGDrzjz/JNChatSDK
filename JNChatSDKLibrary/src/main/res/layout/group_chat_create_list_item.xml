<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingEnd="48px">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/group_chat_create_list_item_icon"
        android:layout_width="@dimen/contacts_list_icon_width_height_size"
        android:layout_height="@dimen/contacts_list_icon_width_height_size"
        android:layout_marginTop="20px"
        android:layout_marginBottom="20px"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:maxHeight="@dimen/crowd_create_icon_max_height_size"
        android:scaleType="fitCenter"
        android:src="@mipmap/soil_iv_default"
         />

    <TextView
        android:id="@+id/group_chat_create_list_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="@dimen/list_auto_user_info_tv_text_size" />

    <CheckBox
        android:id="@+id/group_chat_create_list_item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:button="@drawable/group_chat_create_cb_bg"
        android:clickable="false" />

</com.zhy.autolayout.AutoLinearLayout>