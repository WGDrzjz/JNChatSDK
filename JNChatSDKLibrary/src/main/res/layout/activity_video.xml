<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <com.ksyun.media.player.KSYTextureView
        android:id="@+id/ksytextureView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.ksyun.media.player.KSYTextureView>

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/black"
        android:textColor="@android:color/white" />


    <RelativeLayout
        android:id="@+id/rl_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#000000"
        >
        <Spinner
            android:id="@+id/video_spinner"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:spinnerMode="dropdown"
            android:dropDownWidth="80dp"
            android:popupBackground="#00000000"
            android:background="@drawable/spinner_drop_down_shape"
            android:overlapAnchor="false"
            />
    </RelativeLayout>

</RelativeLayout>