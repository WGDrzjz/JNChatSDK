<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.ksyun.media.player.KSYTextureView
            android:id="@+id/ksytextureView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_8"
                android:paddingBottom="@dimen/padding_4"
                android:paddingTop="@dimen/padding_4"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent_b"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_biaozhun"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_4"
                    android:text="标准"
                    android:gravity="center"
                    android:background="@drawable/jc_txt_primary_8"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/tv_gaoqing"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_4"
                    android:text="高清"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/iv_all"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_ping_all"
                    android:layout_marginRight="@dimen/padding_16"
                    />
            </LinearLayout>
        </com.ksyun.media.player.KSYTextureView>

    </RelativeLayout>
    <WebView
        android:id="@+id/wv_btm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>