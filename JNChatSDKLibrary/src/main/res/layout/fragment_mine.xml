<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/user_info_container"
                layout="@layout/title_user_info" />


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="64px">

                <TextView
                    android:id="@+id/my_authentication"
                    style="@style/main_text"
                    android:text="身份验证" />

                <View style="@style/gray_line" />

                <TextView
                    android:id="@+id/my_pjsip"
                    style="@style/main_text"
                    android:text="PJSIP配置" />

                <View style="@style/gray_line" />

                <TextView
                    android:id="@+id/my_video_mass"
                    style="@style/main_text"
                    android:text="视频质量" />

                <View style="@style/gray_line" />

                <TextView
                    android:id="@+id/my_setting"
                    style="@style/main_text"
                    android:text="提醒设置" />

                <View style="@style/gray_line" />

                <TextView
                    android:id="@+id/my_clean"
                    style="@style/main_text"
                    android:text="清除缓存" />

                <View style="@style/gray_line" />

                <TextView
                    android:id="@+id/my_update"
                    style="@style/main_text"
                    android:text="检查更新" />

                <View style="@style/gray_line" />

                <TextView
                    android:id="@+id/my_password"
                    style="@style/main_text"
                    android:text="修改密码" />

                <View style="@style/gray_line" />

                <TextView
                    android:id="@+id/my_about"
                    style="@style/main_text"
                    android:text="关于" />

                <View style="@style/gray_line" />

                <TextView
                    android:id="@+id/my_help"
                    style="@style/main_text"
                    android:text="帮助" />

                <View style="@style/gray_line" />

                <TextView
                    android:id="@+id/my_login_out"
                    style="@style/main_text"
                    android:text="注销账户" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="48px"
                    android:background="@color/divider_color"
                    android:visibility="gone" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </androidx.core.widget.NestedScrollView>

</com.zhy.autolayout.AutoLinearLayout>